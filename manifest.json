{
  "manifest_version": 3,
  "name": "Amazon Product Title Extractor",
  "version": "1.0",
  "description": "Extracts product titles from Amazon product pages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.in/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.com.mx/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Product Title Extractor"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.in/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.com.br/*",
        "https://*.amazon.com.mx/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 